# Environment configuration for Parts Interchange Database
# Copy this file to .env and update the values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=your-app-name.onrender.com,localhost,127.0.0.1

# Database Configuration - Option 1: Use DATABASE_URL (Recommended for Render)
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Database Configuration - Option 2: Individual variables (for local development)
DB_NAME=parts_interchange_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# API Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000,http://127.0.0.1:3000
API_THROTTLE_RATE=1000/hour

# Redis (for caching and background tasks) - Optional
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for notifications) - Optional
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/parts_interchange.log

# Production Settings
USE_HTTPS=True
SECURE_SSL_REDIRECT=True

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn-here